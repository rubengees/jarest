<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
      prefHeight="640.0"
      prefWidth="800.0" xmlns="http://javafx.com/javafx/null"
      fx:controller="com.rubengees.jarest.controller.MainController">
    <MenuBar>
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#onCloseButtonClick" text="Close"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Cookies">
            <MenuItem mnemonicParsing="false" onAction="#onShowCookiesClick" text="Show"/>
            <MenuItem mnemonicParsing="false" onAction="#onClearCookies" text="Clear"/>
        </Menu>
    </MenuBar>
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="NEVER"/>
        </rowConstraints>
        <VBox.margin>
            <Insets/>
        </VBox.margin>
        <ComboBox fx:id="methodComboBox" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="GET"/>
                    <String fx:value="POST"/>
                </FXCollections>
            </items>
            <value>
                <String fx:value="GET"/>
            </value>
            <GridPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </GridPane.margin>
        </ComboBox>
        <TextField fx:id="urlInput" onAction="#onUrlInputEnter" promptText="URL" GridPane.columnIndex="1"
                   GridPane.hgrow="ALWAYS" GridPane.rowIndex="0">
            <GridPane.margin>
                <Insets bottom="20.0" right="20.0" top="20.0"/>
            </GridPane.margin>
        </TextField>
    </GridPane>
    <SplitPane dividerPositions="0.5" prefHeight="160.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets left="20.0" right="20.0"/>
        </VBox.margin>
        <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="160.0" prefWidth="200.0">
            <TitledPane animated="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                        text="Query Parameters">
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                    <padding>
                        <Insets bottom="-1.0" left="-1.0" right="-1.0" top="-1.0"/>
                    </padding>
                    <TableView fx:id="queryInput" editable="true" maxHeight="1.7976931348623157E308"
                               maxWidth="1.7976931348623157E308">
                        <placeholder>
                            <Label text=""/>
                        </placeholder>
                        <columns>
                            <TableColumn text="Parameter">
                                <cellValueFactory>
                                    <PropertyValueFactory property="title"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Value">
                                <cellValueFactory>
                                    <PropertyValueFactory property="value"/>
                                </cellValueFactory>
                            </TableColumn>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                    <GridPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308"/>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308"/>
                            <ColumnConstraints/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints vgrow="NEVER"/>
                        </rowConstraints>
                        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                onAction="#onAddQueryParameter" text="Add" GridPane.columnIndex="2">
                            <GridPane.margin>
                                <Insets bottom="5.0" right="5.0" top="5.0"/>
                            </GridPane.margin>
                        </Button>
                        <TextField fx:id="queryParameterTitleInput" maxHeight="1.7976931348623157E308"
                                   maxWidth="1.7976931348623157E308" promptText="Parameter">
                            <GridPane.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </GridPane.margin>
                        </TextField>
                        <TextField fx:id="queryParameterValueInput" maxHeight="1.7976931348623157E308"
                                   maxWidth="1.7976931348623157E308" promptText="Value" GridPane.columnIndex="1">
                            <GridPane.margin>
                                <Insets bottom="5.0" right="5.0" top="5.0"/>
                            </GridPane.margin>
                        </TextField>
                    </GridPane>
                </VBox>
            </TitledPane>
            <TitledPane animated="false" fx:id="formInputRoot" text="Form Parameters">
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                    <padding>
                        <Insets bottom="-1.0" left="-1.0" right="-1.0" top="-1.0"/>
                    </padding>
                    <TableView fx:id="formInput" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                        <placeholder>
                            <Label text=""/>
                        </placeholder>
                        <columns>
                            <TableColumn text="Parameter">
                                <cellValueFactory>
                                    <PropertyValueFactory property="title"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Value">
                                <cellValueFactory>
                                    <PropertyValueFactory property="value"/>
                                </cellValueFactory>
                            </TableColumn>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                    <GridPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308"/>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308"/>
                            <ColumnConstraints hgrow="NEVER"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints vgrow="NEVER"/>
                        </rowConstraints>
                        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                onAction="#onAddFormParameter" text="Add" GridPane.columnIndex="2">
                            <GridPane.margin>
                                <Insets bottom="5.0" right="5.0" top="5.0"/>
                            </GridPane.margin>
                        </Button>
                        <TextField fx:id="formParameterTitleInput" maxHeight="1.7976931348623157E308"
                                   maxWidth="1.7976931348623157E308" promptText="Parameter">
                            <GridPane.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </GridPane.margin>
                        </TextField>
                        <TextField fx:id="formParameterValueInput" maxHeight="1.7976931348623157E308"
                                   maxWidth="1.7976931348623157E308" promptText="Value" GridPane.columnIndex="1">
                            <GridPane.margin>
                                <Insets bottom="5.0" right="5.0" top="5.0"/>
                            </GridPane.margin>
                        </TextField>
                    </GridPane>
                </VBox>
            </TitledPane>
        </SplitPane>
        <SplitPane dividerPositions="0.5" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   orientation="VERTICAL">
            <TitledPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Output Headers">
                <TableView fx:id="headerOutput" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                    <placeholder>
                        <Label text=""/>
                    </placeholder>
                    <columns>
                        <TableColumn text="Header">
                            <cellValueFactory>
                                <PropertyValueFactory property="title"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Value">
                            <cellValueFactory>
                                <PropertyValueFactory property="value"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </TitledPane>
            <TitledPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Output Body">
                <TextArea fx:id="resultOutput" editable="false" maxHeight="1.7976931348623157E308"
                          maxWidth="1.7976931348623157E308" wrapText="true"/>
            </TitledPane>
        </SplitPane>
    </SplitPane>
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="NEVER"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="NEVER"/>
        </rowConstraints>
        <Button fx:id="actionButton" mnemonicParsing="false" onAction="#onActionButtonClick" text="Send"
                GridPane.columnIndex="1">
            <GridPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </GridPane.margin>
        </Button>
        <Label fx:id="statusOutput" text="Waiting">
            <GridPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </GridPane.margin>
        </Label>
    </GridPane>
</VBox>
